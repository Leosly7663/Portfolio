{
  "compilerOptions": {
    "target": "es2017",        // or "es2015", "es2016", etc.
    "downlevelIteration": true, // optional, but helps with iteration support
    "lib": ["es2017","dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/Profile.js", "app/page.js", "app/layout.tsx", "app/Components/Menu.tsx"],
  "exclude": ["node_modules"]
}
